// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id  Int @id @default(autoincrement())
  taskName String
  checked Boolean
  insUser String
  insDate DateTime
  updDate DateTime
  deleteFlg Boolean
}

model User {
  id Int @id @default(autoincrement())
  accountId String @unique
  password String
  firstName String
  lastName String
}
